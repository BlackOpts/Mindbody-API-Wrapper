<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.mbapi.mbapidemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandingActivity"
            android:label="@string/title_activity_landing"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClientProfile.ClientProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClientProfile.MyPassesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClassRegistration.ClassesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AppointmentBooking.BookableSessionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BookingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClientProfile.MyScheduleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClientProfile.MyPastVisitsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClientProfile.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SignupActivity"></activity>
    </application>

</manifest>